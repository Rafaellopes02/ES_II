@model List<TrabalhoESII.Models.Mensagem>
@{
    ViewData["Title"] = "Minhas Mensagens";
}

<h2 class="text-center mt-4">ðŸ“¨ Minhas Mensagens</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">Ainda nÃ£o recebeste nenhuma mensagem.</div>
}
else
{
    <table class="table table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Evento</th>
                <th>Remetente</th>
                <th>Mensagem</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model)
            {
                <tr>
                    <td>@msg.Evento?.nome</td>
                    <td>@msg.Remetente?.nome</td>
                    <td>@msg.Conteudo</td>
                    <td>@msg.DataEnvio.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>

                <div>
                    <strong>De:</strong> @msg.Remetente.nome <br />
                    <strong>Mensagem:</strong> @msg.Conteudo <br />
                    <hr />
                </div>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="~/js/auth-guard.js"></script>
}

