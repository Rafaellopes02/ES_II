@model List<TrabalhoESII.Models.Mensagem>

@{
    ViewData["Title"] = "Minhas Mensagens";
}

<h2 class="mb-4">Mensagens Recebidas</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>De</th>
                <th>Conteúdo</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model)
            {
                <tr>
                    <td>@msg.Remetente?.nome</td>
                    <td>@msg.Conteudo</td>
                    <td>@msg.DataEnvio.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Não tens mensagens recebidas.</p>
}

@section Scripts {
    <script src="~/js/auth-guard.js"></script>
}
