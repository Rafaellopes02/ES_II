@{
    ViewData["Title"] = "Painel de Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/painel.css" />

<h2 class="mb-4">Gestão de Utilizadores</h2>

<!-- Botão para abrir modal -->
<button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalNovoUtilizador">
    Adicionar Utilizador
</button>

<!-- Modal com estilo igual ao dos eventos -->
<div class="modal fade" id="modalNovoUtilizador" tabindex="-1" aria-labelledby="modalNovoUtilizadorLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form onsubmit="event.preventDefault(); criarUtilizador();">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="modalNovoUtilizadorLabel">Novo Utilizador</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputNome">Nome</label>
                        <input id="inputNome" class="form-control"  required>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input id="inputEmail" class="form-control" type="email" required>
                    </div>
                    <div class="form-group">
                        <label for="inputIdade">Idade</label>
                        <input id="inputIdade" class="form-control" type="number"  required>
                    </div>
                    <div class="form-group">
                        <label for="inputTelefone">Telefone</label>
                        <input id="inputTelefone" class="form-control"  required>
                    </div>
                    <div class="form-group">
                        <label for="inputNacionalidade">Nacionalidade</label>
                        <select id="inputNacionalidade" class="form-control" required>
                            <option value="">Selecionar...</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputUsername">Nome de Utilizador</label>
                        <input id="inputUsername" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="inputSenha">Senha</label>
                        <input id="inputSenha" type="password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="inputTipo">Tipo</label>
                        <select id="inputTipo" class="form-control" required>
                            <option value=""selected>Selecionar...</option>
                            <option value="2">UserManager</option>
                            <option value="3">Participante</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Criar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scroll horizontal -->
<div style="overflow-x: auto;">
    <table class="table table-bordered table-striped" id="tabelaUtilizadores">
        <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Tipo</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Script -->
<script src="~/js/Manager-Utilizadores.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/paises.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const selectNacionalidade = document.getElementById("inputNacionalidade");
        if (!selectNacionalidade) return;
        paises.forEach(pais => {
            const option = document.createElement("option");
            option.value = pais;
            option.textContent = pais;
            selectNacionalidade.appendChild(option);
        });
    });
</script>

